{
  "sections": {
    "section": {
      "type": "section",
      "blocks": {
        "collection_card": {
          "type": "collection-card",
          "settings": {
            "collection": "{{ closest.collection }}",

            "content_direction": "column",

            "gap": 12,
            "horizontal_alignment": "flex-start",
            "vertical_alignment": "center",
            "horizontal_alignment_flex_direction_column": "center",
            "vertical_alignment_flex_direction_column": "center",
            "width": "fill",
            "custom_width": 100,
            "inherit_color_scheme": true,
            "color_scheme": "",

            "video_position": "cover",

            "background_image_position": "cover",

            "border": "none",
            "border_width": 1,
            "border_opacity": 100,
            "border_radius": 0,
            "padding-block-start": 0,
            "padding-block-end": 0,
            "padding-inline-start": 0,
            "padding-inline-end": 0
          },
          "blocks": {
            "text": {
              "type": "text",
              "settings": {
                "text": "<h4>{{ closest.collection.title }}</h4>",
                "alignment": "left",
                "padding-block-start": 0,
                "padding-block-end": 0,
                "padding-inline-start": 0,
                "padding-inline-end": 0
              }
            }
          },
          "block_order": ["text"]
        }
      },
      "block_order": ["collection_card"],
      "settings": {
        "content_direction": "row",

        "gap": 12,
        "horizontal_alignment": "flex-start",
        "vertical_alignment": "flex-end",
        "horizontal_alignment_flex_direction_column": "flex-start",
        "vertical_alignment_flex_direction_column": "center",
        "section_width": "full-width",
        "section_height": "",
        "color_scheme": "",

        "video_position": "cover",

        "background_image_position": "cover",

        "border": "none",
        "border_width": 1,
        "border_opacity": 100,
        "border_radius": 0,
        "padding-block-start": 0,
        "padding-block-end": 0,
        "padding-inline-start": 0,
        "padding-inline-end": 0
      }
    }
  },
  "order": ["section"]
}
