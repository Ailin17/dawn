{
  "name": "horizon",
  "version": "1.0.0",
  "description": "Horizon is the first of a new generation of first party Shopify themes.  It incorporates the new Liquid Storefronts features, including theme blocks and Styles.",
  "main": "index.js",
  "scripts": {
    "dev": "shopify theme dev --store 59364a-2",
    "dev:port:theme1": "shopify theme dev --store 59364a-2 --port 3000 --path tests/themes/theme1",
    "dev:port:theme2": "shopify theme dev --store 59364a-2 --port 3000 --path tests/themes/theme2",
    "dev:port:theme3": "shopify theme dev --store 59364a-2 --port 3000 --path tests/themes/theme3",
    "dev:schemas": "tsx ./scripts/watch-schemas.mts",
    "build:schemas": "tsx ./scripts/watch-schemas.mts --build",
    "test": "npm run test:setup && playwright test",
    "test:chrome": "npm run test:setup && playwright test --project=chromium",
    "test:clear": "rm -f templates/*.test-* sections/test-* layout/test-*",
    "test:create": "npm run createTestTemplates",
    "test:create:verbose": "npm run createTestTemplates -- --verbose",
    "test:safari": "npm run test:setup && playwright test --project=safari",
    "test:setup": "node tests/scripts/testFileSetup.js && node tests/scripts/createTestThemes.js",
    "test:ui": "npm run test:setup && THEME_CONFIG=theme1 playwright test --ui",
    "test:ui:theme1": "npm run test:ui",
    "test:ui:theme2": "npm run test:setup && THEME_CONFIG=theme2 playwright test --ui",
    "test:ui:theme3": "npm run test:setup && THEME_CONFIG=theme3 playwright test --ui",
    "test:updateSnapshots": "npx playwright test --update-snapshots",
    "test:deleteAllSnapshots": "find tests -name '*.png' -type f -delete",
    "createTestTemplates": "node tests/scripts/createTestTemplates.js",
    "postinstall": "playwright install",
    "lint:css": "stylelint '{sections,layout,templates,blocks,snippets}/**/*.{css,liquid}'",
    "lint:css:fix": "stylelint '{sections,layout,templates,blocks,snippets}/**/*.{css,liquid}' --fix",
    "lint:js": "eslint 'assets/*.js'",
    "lint:js:fix": "eslint 'assets/*.js' --fix",
    "lint": "npm run lint:css; npm run lint:js",
    "lint:report": "node scripts/create-lint-report.js",
    "theme-check": "npm run test:setup && node scripts/create-theme-check-report.js",
    "type-check": "cd assets && tsc --noEmit -p jsconfig.json",
    "type-check-schemas": "cd schemas && tsc --noEmit -p jsconfig.json",
    "which:shopify": "which shopify && shopify --version",
    "create-release": "node scripts/create-release.js"
  },
  "keywords": [],
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.41.0",
    "@shopify/cli": "^3.82.0",
    "@shopify/prettier-plugin-liquid": "^1.9.0",
    "@shopify/theme-check-common": "^3.12.0",
    "@types/node": "^20.0.0",
    "browserslist": "^4.23.0",
    "chalk": "^4.1.2",
    "comment-json": "^4.2.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.0",
    "eslint": "^9.29.0",
    "eslint-plugin-compat": "^6.0.2",
    "glob": "^11.0.0",
    "minimist": "^1.2.8",
    "mlly": "^1.7.4",
    "prettier": "2.8.8",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^7.0.0",
    "stylelint-plugin-liquid": "file:./scripts/stylelint-plugin-liquid",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
