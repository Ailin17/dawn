{% assign logo_url = 'https://picsum.photos/200/300' %}
{% assign name = 'Remote Vendor' %}
{% assign rating_count = 100 %}
{% assign rating_value = 4.5 %}

<div class="remote-vendor">
  <div class="logo">
    <img src="{{ logo_url }}" alt="" width="40" height="40">
  </div>
  <div class="info">
    <p class="intro">Sold and shipped by</p>
    <div class="name_and_ratings">
      <p class="name">{{ name }} Â·</p>
      <div class="ratings">
        <p class="rating-count">
          {{ rating_value }}
        </p>
        <span class="rating-icon-wrapper">
          {{- 'icon-star.svg' | inline_asset_content -}}
        </span>
        <p class="rating-value">({{ rating_count }})</p>
      </div>
    </div>
  </div>
</div>
